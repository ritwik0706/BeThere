<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cfd.ram.attendance.MarkAttendance">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your attendance is "
        android:textSize="30dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/attendance_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text"
        android:text="24"
        android:textSize="30dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:text="SHOW MY ATTENDANCE" />

    <Button
        android:id="@+id/buFaceDetect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buShow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="Face Dtection" />


</RelativeLayout>
